<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:rowCount="3"
    android:columnCount="3"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridLayout"
    android:padding="15dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblX"
        android:layout_toRightOf="@+id/lblX"
        android:id="@+id/txtX"
        android:minWidth="150dp"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtY"
        android:minWidth="150dp"
        android:layout_toEndOf="@+id/txtX"
        android:layout_below="@+id/txtX"
        android:layout_alignLeft="@+id/txtX"
        android:layout_alignStart="@+id/txtX"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtZ"
        android:minWidth="150dp"
        android:layout_below="@+id/txtY"
        android:layout_alignLeft="@+id/txtY"
        android:layout_alignStart="@+id/txtY"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtT"
        android:minWidth="150dp"
        android:inputType="text"
        android:layout_below="@+id/txtZ"
        android:layout_alignLeft="@+id/txtZ"
        android:layout_alignStart="@+id/txtZ" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="x: "
        android:id="@+id/lblX" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="y: "
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/txtY"
        android:layout_alignBottom="@+id/txtY"
        android:layout_alignLeft="@+id/lblX"
        android:layout_alignStart="@+id/lblX" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="z: "
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/txtZ"
        android:layout_alignBottom="@+id/txtZ"
        android:layout_toLeftOf="@+id/txtZ" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="t: "
        android:id="@+id/lblT"
        android:layout_alignBaseline="@+id/txtT"
        android:layout_alignBottom="@+id/txtT"
        android:layout_toLeftOf="@+id/txtT" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHost"
        android:layout_below="@+id/txtT"
        android:layout_alignRight="@+id/txtT"
        android:layout_alignEnd="@+id/txtT"
        android:layout_alignLeft="@+id/txtT"
        android:layout_alignStart="@+id/txtT"
        android:text="192.168.1.4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/btConnect"
        android:layout_alignBottom="@+id/txtHost"
        android:layout_toRightOf="@+id/txtHost" />

</RelativeLayout>